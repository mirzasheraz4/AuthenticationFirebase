<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:id="@+id/RL2">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:layout_centerInParent="true"
            android:id="@+id/IV_Logo1"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/RL3"
        android:layout_below="@+id/RL2">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/logo2"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/SignInFBBtn"
        android:layout_below="@id/RL3"
        android:layout_centerInParent="true"
        android:background="@drawable/border"
        android:text="Sign IN with FB"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp">
    </Button>
    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/SignInGmailBtn"
        android:layout_below="@id/SignInFBBtn"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/border_two"
        android:text="Sign In with Gmail"
        android:textColor="@color/BasicAppColor"
        android:drawableStart="@drawable/google_logo"
        android:textSize="16sp">
    </Button>

</RelativeLayout>